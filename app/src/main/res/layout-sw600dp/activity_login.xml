<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.login.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContainerLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2x">

        <TextView
            android:id="@+id/tvWelcome"
            style="@style/header1_white"
            android:layout_marginTop="300dp"
            android:text="@string/text_welcome_login"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ivIconUser"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.128"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/etUser"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/et_corner_round"
            android:ems="20"
            android:hint="@string/hint_email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@id/ivIconUser"
            app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

        <ImageView
            android:id="@+id/ivIconPassword"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/ic_password"
            app:layout_constraintStart_toStartOf="@id/ivIconUser"
            app:layout_constraintTop_toBottomOf="@id/ivIconUser"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/etPassword"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/et_corner_round"
            android:ems="20"
            android:hint="@string/hint_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@id/ivIconPassword"
            app:layout_constraintTop_toBottomOf="@id/etUser" />

        <Button
            android:id="@+id/btnLogin"
            style="@style/button_dark_blue"
            android:layout_width="230dp"
            android:layout_marginTop="70dp"
            android:text="@string/txtbtn_login"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etPassword" />

        <TextView
            android:id="@+id/tvForgotPassword"
            style="@style/text_white_underlined"
            android:layout_marginBottom="100dp"
            android:text="@string/txtTv_forgotPass"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

